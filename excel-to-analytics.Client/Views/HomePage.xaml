<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="excel_to_analytics.Client.Views.HomePage"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             BackgroundColor="White"
             Title="Home"
             Shell.NavBarIsVisible="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <VerticalStackLayout Grid.Row="0" Grid.Column="0">
            <VerticalStackLayout WidthRequest="400" Margin="0,30,0,0">
                <Button TextColor="White" BackgroundColor="#339966" Text="Download Excel"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
        <micro:ChartView x:Name="Chart">
            
        </micro:ChartView>
        <VerticalStackLayout Margin="40,10,10,10" Grid.Row="2">
            <Label CharacterSpacing="5" TextColor="Black">Завантажені файли:</Label>
            <ListView></ListView>
        </VerticalStackLayout>
    </Grid>
   
</ContentPage>